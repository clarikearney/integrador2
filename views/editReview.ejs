<div id="modal-editReview" uk-modal>
    <div class="uk-modal-dialog">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <div class="uk-modal-body" uk-overflow-auto>            
          <form id="formLogin" action="/users/reviews/edit/<%= resultado.id %> " class="uk-flex uk-flex-column uk-flex-middle" method="post">
              
            <div class="uk-margin">
                <div class="uk-inline">
                  <input type="hidden" name="pelicula_id" value= "<%= pelicula_id %>" >
                </div>
              </div>
              <div class="uk-margin">
                <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="icon: mail"></span>
                    <input class="uk-input" id="email" type="email" name="email" placeholder="email">
                </div>
            </div>
               <div class="uk-margin">
                 <div class="uk-inline">
                    <span class="uk-form-icon" uk-icon="icon: pencil"></span>
                    <input class="uk-input" id="password" name="password" placeholder="password">
                 </div>
               </div>
               <div class="uk-margin">
               <div class="uk-modal-title	">
                 <textarea name="resena" id="resena" cols="30" rows="10" placeholder="Leave your review"> <%= resultado.resena %>  </textarea>
               </div>
              </div>
              <div class="uk-margin">
                <input type="range" id="puntaje" name="puntaje" class="uk-range" min="0" max="10" onchange="updateValue(this.value)">
                <p id="valorRange" style="color: aliceblue;"> <%= resultado.puntaje %>  </p>
                </div>
               <div class="uk-modal-footer uk-text-right">
                <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
                <button class="uk-button uk-button-primary" type="submit">Save</button>
            </div>

        </div>
    </div>